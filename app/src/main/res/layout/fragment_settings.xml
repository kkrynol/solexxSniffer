<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/textToken"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="GPuO3vpOdl0Ox087qJulkrS0CvHpk0YEX7dzsSF028D2Rv92R41AJ6BKMwUc9y3l"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/textApp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="org.telegram.messenger"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/textServer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="https://capybara.s1.zetohosting.pl"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/buttonApplySettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Apply Settings" />

</LinearLayout>
